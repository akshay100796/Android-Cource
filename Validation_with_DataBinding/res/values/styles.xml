<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="et_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20sp</item>
        <item name="android:padding">20sp</item>
        <item name="android:textColorHint">@color/lite_blue</item>
        <item name="android:textColor">@color/lite_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/et_border</item>
        <item name="android:drawablePadding">10dp</item>
    </style>





</resources>

